@model ReaderDiary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1 class="text-center">Are you sure you want to delete this book?</h1>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Book Details</h4>
        </div>
        <div class="card-body">
            <div>
                <strong>Title:</strong> @Model.Title
            </div>
            <div>
                <strong>Author:</strong> @Model.Author
            </div>
            <div>
                <strong>Published Date:</strong> @Model.PublishedDate.ToShortDateString()
            </div>
            <div>
                <strong>Description:</strong> @Model.Description
            </div>
        </div>
        <div class="card-footer text-center">
            <!-- Formulář pro potvrzení smazání -->
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg" style="font-weight: bold; padding: 12px 24px;">
                    Yes, Delete
                </button>
            </form>
            <!-- Tlačítko pro zrušení -->
            <a asp-action="Index" class="btn btn-secondary btn-lg" style="font-weight: bold; padding: 12px 24px;">
                Cancel
            </a>
        </div>
    </div>
</div>
