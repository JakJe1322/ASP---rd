@model ReaderDiary.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="fw-bold">📖 Book Details</h2>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Title:</label>
                        <p>@Model.Title</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Author:</label>
                        <p>@Model.Author</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Published Date:</label>
                        <p>@Model.PublishedDate.ToString("dd.MM.yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Description:</label>
                        <p>@Model.Description</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">⬅ Back to List</a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning fw-bold">✏ Edit Book</a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    &copy; 2025 Reader Diary | Made with ❤️ in ASP.NET
                </div>
            </div>
        </div>
    </div>
</div>
